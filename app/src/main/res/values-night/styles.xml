<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/headder</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="navigationIcon">@drawable/baseline_arrow_back_24_night</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/headder</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableStart">@drawable/baseline_search_24</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ClearIconStyle">
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:src">@drawable/baseline_clear_24</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SwitchTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TrackArtistAndTimeText">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="DotDividerImageStyle">
        <item name="android:src">@drawable/ellipse_1_white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ForwardIconStyle">
        <item name="android:src">@drawable/ic_right_arrow_dark</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <style name="NotFoundIconStyle">
        <item name="android:src">@drawable/not_found_dark_mode</item>
    </style>

    <style name="NotFoundTextStyle">
        <item name="android:text">@string/text_not_found</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ImageErrorStyle">
        <item name="android:src">@drawable/error_dark_mode</item>
    </style>

    <style name="ButtonUpdateStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:text">@string/button_update</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="SearchHistoryTextStyle">
        <item name="android:text">@string/search_history_text</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <style name="AudioPlayerTrackDescription">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AudioPlayerTrackValue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BackImageButtonStyle">
        <item name="srcCompat">@drawable/baseline_arrow_back_24_night</item>
    </style>

    <style name="ChoosenTrackNameStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayButtonStyle">
        <item name="srcCompat">@drawable/play_dark</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="QuequeButtonStyle">
        <item name="srcCompat">@drawable/queque_dark</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="FavouriteButtonStyle">
        <item name="srcCompat">@drawable/favourite_dark</item>
        <item name="android:background">@color/black</item>
    </style>

</resources>